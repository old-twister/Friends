<p style="color: green"><%= notice %></p>

<div class="container-fluid">
  <h1>Friend details</h1>
  <%= form_with(model: @friend, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", readonly: true %>
    </div>
    <div class="form-group">
      <%= form.label :surname %>
      <%= form.text_field :surname, class: "form-control", readonly: true %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", readonly: true %>
    </div>

    <div class="form-group mt-2 mb-2">
    <%= form.label :where_met %>
    <%= form.text_field :where_met, class: "form-control", disabled: true %>
    </div>
  <% end %>

    <%= link_to "Back to friends", friends_path, class: 'btn btn-outline-primary' %> |
    <%= link_to "Edit this friend", edit_friend_path(@friend), class: 'btn btn-outline-primary' %>
    <%= button_to "Destroy this friend", @friend, method: :delete, class: 'btn btn-outline-danger' %>

</div>